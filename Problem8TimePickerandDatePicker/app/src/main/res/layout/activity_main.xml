<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vinhbb96er.cntt.com.problem8_timepickeranddatepicker.MainActivity"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <TextView
        android:text="Quản lý công việc hằng tuần"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:background="#11a620"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="3"
                android:text="Công việc:"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_work"
                android:textSize="20sp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="3"
                android:text="Nội dung:"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_content"
                android:textSize="20sp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="3"
                android:text="Ngày HT:"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_date_finish"
                android:layout_weight="4"
                android:text="22/01/2017"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#006fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_date"
                android:hint="Date"
                android:textSize="20sp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="3"
                android:text="Giờ HT:"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time_finish"
                android:layout_weight="4"
                android:text="14:30"
                android:textSize="20sp"
                android:textColor="#ff002f"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_time"
                android:hint="Time"
                android:textColor="#333"
                android:textSize="20sp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_add_work"
            android:text="Thêm công việc"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="Danh sách công việc"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:background="#11a620"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ListView
        android:id="@+id/lv_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>

